{
  "build": [
    ["export", "PKG_CONFIG_PATH="],
    ["export", "PKG_CONFIG_LIBDIR="],
    ["sh", "esy/prep.sh"],
    ["touch", "_build/src/harfbuzz.def"],
    ["cd", "_build"
    ],
    [
      "./configure",
      "--prefix=$cur__install",
      "--build=$ESY_TOOLCHAIN_BUILD",
      "--host=$ESY_TOOLCHAIN_HOST",
      "--with-icu=no",
      "--disable-dependency-tracking",
      "CC=$ESY_TOOLCHAIN_CC",
      "CXX=$ESY_TOOLCHAIN_CXX"
    ],
    ["cd", "../"],
    ["sh", "esy/build.sh"]
  ]
}
