{
  "build": [
    ["export", "PKG_CONFIG_PATH="],
    ["export", "PKG_CONFIG_LIBDIR="],
    [
      "./configure",
      "--prefix=$cur__install",
      "--build=$ESY_TOOLCHAIN_BUILD",
      "--host=$ESY_TOOLCHAIN_HOST",
      "--enable-video-x11=#{$ESY_TOOLCHAIN_SYSTEM == 'linux'}",
      "--with-sysroot=$ESY_TOOLCHAIN_SYSROOT",
      "CC=$ESY_TOOLCHAIN_CC",
      "CXX=$ESY_TOOLCHAIN_CXX"
    ],
    ["make", "-j6"]
  ],
  "install": [
    ["make", "install"]
  ]
}
